{{#section 'head'}}
<title>Create new assignment</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="http://localhost:5005/static/js/create-assignment-jquery.js"></script>
<link rel="stylesheet" type="text/css" href="http://localhost:5005/static/css/styles.css">
{{/section}}
{{> user-header }}
<h3 class="pagetitle">{{name}} - Homepage</h3>
<p>Class information</p>
<p>{{description}}</p>
<h4>Create new assignment</h4>

<div class="assignment-form">
<form method="post" id="form">
  <input name="title" id="title" type="text" placeholder="Title" required />
  <input name="description" id="description" type="text" placeholder="Type a short description here" required/>
  <div class="large-col">
    <input name="workload" id="workload" type="range" class="slider" min="0" max="100" value="50"/>
  </div>
  <div class="small-col"><p click-editable><span id="worknum">50</span></p></div>
  <input name="duedate" id="duedate" type="number" required />
  <a class="btn submit-btn" id="submit-form">Submit</a>
</form>
</div>