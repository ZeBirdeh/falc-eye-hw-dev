{{#section 'head'}}
<title>Create new class - Falkai</title>
<script src="http://localhost:5005/static/js/create-class-jquery.js"></script>
{{/section}}
<div class="content-full">
  <div class="sm10-col"></div>
  <div class="lg80-col ns-padded">
    <p class="title">Create new class</p>
    <form action="/classes/form/create" method="post" id="form">
      <input name="name" id="name" type="text" placeholder="Title" />
      <textarea class="large-input" name="description" id="description" type="text" placeholder="Type a short description here"></textarea>
      <p class="small"><span id="charcount">2000</span> characters left</p>
      <input name="school" id="school" type="text" placeholder="Organization name" value="Public"/>
      <a class="btn submit-btn" id="submit-form">Submit</a>
    </form>
  </div>
  <div class="sm10-col"></div>
</div>